{
  "name": "perceptron-agent",
  "version": "1.0.0",
  "type": "module",
  "description": "Perceptron Agent - browser automation using vision and reasoning models",
  "license": "MIT",
  "scripts": {
    "build": "node build.cjs",
    "watch": "node build.cjs --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.0.268",
    "esbuild": "^0.21.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint",
    "*.{ts,tsx,js,cjs,json,css,html,md}": "prettier --write"
  },
  "dependencies": {
    "preact": "^10.28.2"
  }
}
